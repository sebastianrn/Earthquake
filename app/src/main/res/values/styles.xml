<resources>

    <style name="EarthquakeMaterialTheme" parent="EarthquakeMaterialTheme.Base" />

    <style name="EarthquakeMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="windowActionBarOverlay">true</item>

        <!--<item name="android:textColorSecondary">@color/colorActionBarTitle</item>-->
        <item name="android:actionMenuTextColor">@color/colorActionBarTitle</item>
        <item name="android:actionOverflowButtonStyle">
            @style/EarthquakeMaterialTheme.Base.OverFlow
        </item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="titleTextColor">@color/colorActionBarTitle</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/colorActionBarTitle</item>
    </style>

    <style name="EarthquakeMaterialTheme.Base.OverFlow">
        <item name="android:src">@drawable/ic_more_vert_white_24px</item>
    </style>

    <style name="textViewsDetailView">
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Light.SearchResult.Subtitle
        </item>
        <item name="android:layout_height">@dimen/detail_textview_height</item>
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">fill</item>
    </style>

</resources>